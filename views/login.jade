extends ./layout.jade
block contenido
   div(class="col-md-4 remove-float center-block big-top-space")
    form(action="/sessions",method="POST")
        div(class="form-group")
            label(for"email") Email
            input(type="text",name="email",placeholder="@hotmail.com",id="email",class="form-control")
        div(class="form-group")
            label(for"contraseña") Contraseña
            input(type="password",name="password",placeholder="*******",id="password",class="form-control")
        div(class="row top-space")
            div(class="col-xs-12 col-sm-6 ")
                input(type="submit",value="Iniciar sesion",class="btn btn-info")
            div(class="col-xs-12 col-sm-6 text-right")
                a(href="/signup") Notengo cuenta
  
